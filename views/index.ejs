<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To-Do Notes</title>
    <script src="https://kit.fontawesome.com/20a3019659.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="icon" type="image/x-icon" sizes="114x114" href="https://i.pinimg.com/originals/1c/50/a7/1c50a733b431bfc112007ef59519f8b0.png">
  </head>
  <body>
    <div class="user-profile">
      <% if (user){ %>

      <div class="user-image"><img crossorigin="anonymous" src="<%= user.picture %>" alt="<%= user.nickname%>"></div>
      <a href="/profile" class="profile-btn">profile</a>
      <% }else{ %>
        <a href="/login" class="login-btn">Login</a>
      <% } %>
    </div>
    

    <div id="app"> 
      <h1>to do list</h1>
      <ul class="todo-list">
        <% task.forEach(elem =>{ %>
        <li class="todo-list-item">
          <div class="todo-list-item-sname"><%= elem.task %></div>
          <div class="edit-btn">
            <a href="/edit/<%= elem._id %>" class="a edit">
              <span class="fas fa-edit"></span>
            </a>
            <a href="/remove/<%= elem._id %>" class="a remove">
              <span class="fas fa-times"></span>
            </a>
          </div>
        </li>
        <% }) %>
      </ul>
      <form action="/" method="post">
        <input type="text" name="task" id="inputfield" placeholder="New task">
        <button class="btn_add">Add</button>
      </form>
      <p>Insert a new task</p>
    </div>

    <% if (user){ %>
      <a href="/logout" class="login-btn">Logout</a>
  <% } %>
</body>

</html>
